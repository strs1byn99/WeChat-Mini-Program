.searchbar-box {
  width: 80%;
  position: relative;
  -webkit-box-flex: 1;
  -webkit-flex: auto;
  flex: auto;
  border-radius: 5px;
  background: #fff;
  border: 5rpx solid #e6e6ea;
  margin: 20rpx;
}

.weui-icon-search_in-box {
  position: absolute; 
  margin-left: -10rpx;
}

.searchbar-input {
  font-size: 14px;
  margin-left: 50rpx !important;
}

.button-box {
  position: relative;
  display: inline-flex;
  padding-top: 20rpx;
  font-size: 14px;
}