/* pages/search/search.wxss */

.background {
  width: 100%;
  height: 100%;
  position: absolute;
  
}

.searchbar {
  display: inline;
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -ms-flex-direction: row;
  flex-direction: row;
  -webkit-box-align: center;
  -ms-flex-align: center;
  border-bottom: 1px solid #e6e6ea;
}

.searchbar-box {
  position: relative;
  -webkit-box-flex: 1;
  -webkit-flex: auto;
  flex: auto;
  border-radius: 5px;
  background: #e9e9e9;
  border-radius: 10rpx;
  margin: 20rpx;
  height: 2rem;
}

.weui-icon-search_in-box {
  position: absolute; 
  margin-left: -15rpx;
}

.searchbar-input {
  font-size: 16px;
  margin-left: 50rpx !important;
  margin: 10rpx;
}

.button-box {
  position: relative;
  display: inline-flex;
  font-size: 15px;
  margin: 10rpx;
  margin-left: -5rpx;
  margin-top: 18rpx;
  padding: 10rpx;
}

.hit-area {
  width: 100%;
}

.hit-title {
  font-weight: bold;
  padding: 30rpx 27rpx;
}

.hit-item-area-box {
  width: 90%;
  margin-left: 5%;
  display: flex;
  flex-direction: row;
  justify-content: start;
  flex-wrap: wrap !important;
  flex-grow: 1;
}

.hit-item {
  padding: 7rpx 20rpx;
  margin: 10rpx;
  border-radius: 50rpx;
  background-color: #e9e9e9;
}

.scrollview {
  position: absolute;
  background-color: #fff;
}

.binditem {
  font-size: 16px;
  padding-top: 15rpx;
  padding-bottom: 15rpx;
  padding-left: 30rpx;
  margin: 0 30rpx;
  z-index: 2;
  border-bottom: 1px solid #e9e9e9;
}

.icon {
  width: 16px;
  height: 16px;
  margin-left: -35rpx;
  padding-top: 10rpx;
}

/* 搜索结果 */
.item-area-box {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: start;
  flex-wrap: wrap !important;
  flex-grow: 1;
}

.item-box {
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -ms-flex-direction: row;
  flex-direction: row;
  -webkit-box-align: start;
  -ms-flex-align: start;
  align-items: flex;
  background-color: #FFF;
  margin: 15rpx 25rpx;
  padding: 17rpx 0rpx;
  border-bottom: #e9e9e9 solid 2px;
}

.item-image {
  max-width: 120rpx;
  min-width: 120rpx;
  max-height: 120rpx;
  min-height: 120rpx;
}

.item-title {
  font-weight: bold;
  font-size: larger;
  padding-left: 20rpx;
  
}

.item-title {
  font-size: 38rpx;
  padding-left: 20rpx;
  color: #191919;
}

.item-subtitle {
  font-size: 32rpx;
  padding-left: 20rpx;
  margin-top: 5rpx;
  color: #949494;
}

.item-des {
  width: 385rpx;
}

.item-detail {
  padding-top: 20rpx;
  margin-top: 10rpx;
  padding-left: 25rpx;
  padding-right: 20rpx;
  padding-bottom: 5rpx;
  font-size: 36rpx;
  color: #949494;
  border-left: #e9e9e9 solid 2px;
}

.fail {
  display: -webkit-box;
  display: -ms-flexbox;
  background-color: #FFF;
  margin: 0rpx 25rpx;
  padding: 17rpx 0rpx;
  color: #949494;
}
