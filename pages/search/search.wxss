/* pages/search/search.wxss */

.background {
  width: 100%;
  height: 100%;
  position: absolute;
  
}

.searchbar {
  display: inline;
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -ms-flex-direction: row;
  flex-direction: row;
  -webkit-box-align: center;
  -ms-flex-align: center;
  border-bottom: 1px solid #e6e6ea;
}

.searchbar-box {
  position: relative;
  -webkit-box-flex: 1;
  -webkit-flex: auto;
  flex: auto;
  border-radius: 5px;
  background: #e9e9e9;
  border-radius: 10rpx;
  margin: 20rpx;
  height: 2rem;
}

.weui-icon-search_in-box {
  position: absolute; 
  margin-left: -15rpx;
}

.searchbar-input {
  font-size: 16px;
  margin-left: 50rpx !important;
  margin: 10rpx;
}

.button-box {
  position: relative;
  display: inline-flex;
  font-size: 15px;
  margin: 10rpx;
  margin-left: -5rpx;
  margin-top: 18rpx;
  padding: 10rpx;
}

.hit-area {
  width: 100%;
}

.hit-title {
  font-weight: bold;
  padding: 30rpx 27rpx;
}

.hit-item-area {
  width: 90%;
  margin-left: 5%;
  display: flex;
  flex-direction: row;
  justify-content: start;
  flex-wrap: wrap;
  flex-grow: 1;
}

.hit-item {
  padding: 7rpx 20rpx;
  margin: 10rpx;
  border-radius: 50rpx;
  background-color: #e9e9e9;
}
