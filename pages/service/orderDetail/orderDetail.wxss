/* pages/service/orderDetail/orderDetail.wxss */
.container {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  background-color: #FFFFFF;
  align-items: flex-start;
  width: 100%;
  height: 1200rpx;
}

.titleBar{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: flex-start;
  width: 90%;
  height: 50rpx;
  position: absolute;
  top: 20rpx;
  padding: 20rpx;
  margin: 0rpx 20rpx;
  border-bottom: 5rpx solid #E0E3DA;
}

.detail{
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  background-color: #FFFFFF;
  align-items: flex-start;
  width: 90%;
  padding: 20rpx;
  margin: 0rpx 10rpx;
  position: absolute;
  top: 120rpx;
}

.detail image{
  width: 95%;
  margin: 20rpx;
}

.divLine{
  margin: 10rpx;
  background: #E0E3DA;
  width: 5rpx;
  height: 50rpx;
}

.price {
  color: #E0E3DA;
  margin: 0rpx 320rpx 0rpx 20rpx;
  font-size: smaller;
}

.description{
  width: 95%;
  margin: 20rpx;
}