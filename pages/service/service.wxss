/* pages/service/service.wxml */
.container {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  background-color: #FFFFFF;
  align-items: flex-start;
  width: 100%;
  height: 1200rpx;
}

.header {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  background-color: #FFF;
  align-items: flex-start;
  width: 100%;
  height: 50rpx;
  position: absolute;
  top: -20rpx;
  padding: 20rpx;
}

#page-title {
  font-size: 40rpx;
  font-weight: 900;
}

#search {
  position: absolute;
  size: 40rpx;
  right: 50rpx;
}

.navbar {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
  width: 100%;
  height: 90rpx;
  position: absolute;
  top: 50rpx;
  background-color: #FFF
}

.navbar-row {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: flex-start;
  font-size: 28rpx;
}

.navbar-item {
  padding: 20rpx;
  color: gray;

}

.navbar-underline {
  background-color: #0000CD;
  height: 4rpx;
  width: 55rpx;
  position: absolute;
  left: 20rpx;
  top: 70rpx;
}

.navbar-cd {
  left: 170rpx;
}

.navbar-aw {
  left: 320rpx;
}

.navbar-selected {
  font-weight: 500;
  color: black;
}

.outer-swiper {
  height: 980rpx;
  width: 100%; 
  position: absolute;
  top: 130rpx;
}

.swiper-page {
  height: 800rpx;
  width: 100%; 
}

scroll-view {
  width: 100%;
  height: 930rpx;
  background-color: #FFFFFF;
}

.slideshow, .list {
  margin: 20rpx;
}

.slideshow-item image {
  display: block;
  width: 710rpx;
  height: 350rpx;
}

.div-line{
  background: #F0F3EA;
  width: 700rpx;
  height: 5rpx;
  margin: auto;
}

.list {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
}

.list-el {
  background-color: #FFFFFF;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: flex-start;
  height: 190rpx;
}

.list-el image {
  display: block;
  width: 300rpx;
  height: 170rpx;
  margin: 10rpx;
}

.list-el-text {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: flex-start;
  margin: 10rpx;
}

.item-title {
  color: #7D7F87;
  font-weight: 700;
  margin-bottom: 20rpx;
}

.item-description {
  font-size: 25rpx;
  color: #C3C1C2;
  margin-bottom: 20rpx;
}

.item-price {
  color: #FFC43B;
  font-weight: 700;
}

.item-price.inactive {
  color: gray;
}

