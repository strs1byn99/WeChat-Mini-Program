/* pages/service/careerDetail/careerDetail.wxss */
.container {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  background-color: #FFFFFF;
  align-items: flex-start;
  width: 100%;
  height: 1200rpx;
}

.container image {
  width: 100%;
  height: 300rpx;
  position: absolute;
  top: 0rpx;
}

.header-back {
  width: 100%;
  height: 300rpx;
  position: absolute;
  top: 0rpx;
  background-color: #000000;
  opacity: 0.4;
}

.header {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
  width: 100%;
  height: 300rpx;
  position: absolute;
  top: 0rpx;
  padding: 20rpx
}

.title {
  font-size: x-large;
  color: #FFFFFF;
}

.salary {
  font-size: large;
  color: #0000CD;
}

.subtitle {
  font-size: small;
  color: #FFFFFF;
}

.req-title{
  font-size: small;
  color: gray;
  position: absolute;
  top: 300rpx;
  margin: 20rpx;
}

.req {
  position: absolute;
  top: 330rpx;
  margin: 20rpx;
}

.req text {
  padding: 0rpx 10rpx;
  margin: 10rpx 10rpx;
  color: #0000CD;
  border: 2rpx solid #0000CD;
  font-size: small;
}

.wf-title{
  font-size: small;
  color: gray;
  position: absolute;
  top: 400rpx;
  margin: 20rpx;
}

.welfare {
  position: absolute;
  top: 430rpx;
  margin: 20rpx;
}

.welfare text {
  padding: 0rpx 10rpx;
  margin: 10rpx 10rpx;
  color: #0000CD;
  border: 2rpx solid #0000CD;
  font-size: small;
}

.detail-title{
  font-size: small;
  color: gray;
  position: absolute;
  top: 500rpx;
  margin: 20rpx;
}

.detail {
  position: absolute;
  top: 530rpx;
  margin: 20rpx;
  padding: 20rpx;
  font-size: small;
}