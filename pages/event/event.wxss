/* pages/event/event.wxss */
.container {
  display: block;
  flex-direction: column;
  justify-content: flex-start;
  background-color: #FFFFFF;
  align-items: flex-start;
  width: 100%;
  height: 900rpx;
}

.header {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  background-color: #FFF;
  align-items: flex-start;
  width: 100%;
  height: 50rpx;
  position: relative;
  top: -200rpx;
  padding: 20rpx;
}

#page-title {
  font-size: 40rpx;
  font-weight: 900;
}

#search {
  position: relative;
  size: 40rpx;
  right: 50rpx;
}

.navbar {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
  width: 100%;
  height: 90rpx;
  position: relative;
  top: -200rpx;
  background-color: #FFF
}

.navbar-row {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: flex-start;
  font-size: 28rpx;
}

.navbar-item {
  padding: 20rpx;
  color: gray;

}

#navbar-underline{
  background-color: #0000CD;
  height: 4rpx;
  width: 55rpx;
  position: relative;
  left: 20rpx;
}

.navbar-selected {
  font-weight: 500;
  color: black;
}

swiper {
  background-color: #8888DF;
  height: 1000rpx;
  width: 100%; 
  position: relative;
  top: -196rpx;
}

swiper-item {
  background-color: #DFDFDF;
  height: 800rpx;
  width: 100%; 
}

scroll-view {
  width:100%;
  height: 100%;
  background-color: #DFDFDF;
}

.topEvent {
  background-color: #FFFFFF;
  height: 380rpx;
  width: 100%;
  padding: 20rpx;
  position: relative;
  top: -20rpx;
}

#top-text {
  font-size: 30rpx;
  font-weight: 700;
}

.top-card {
  background-color: #0000CD;
  height: 300rpx;
  width: 710rpx;
  margin: 20rpx 0;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
}

#top-title {
  margin: 20rpx 20rpx 0 20rpx;
  font-size: 35rpx;
  font-weight: 700;
  color: #FFFFFF;
}

#top-member {
  margin: 0 20rpx;
  font-size: 25rpx;
  font-weight: 500;
  color: grey;
}

#top-description {
  margin: 50rpx 20rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: #FFFFFF;
  width: 400rpx;
}

#top-image {
  display: block;
  width: 350rpx;
  height: 350rpx;
  position: absolute;
  left: 350rpx;
  bottom: 40rpx;
}

.caseList{
  background-color: #FFFFFF;
  height: 340rpx;
  width: 100%;
  margin: 0 0 32rpx 0;
} 
.caseList text{
  display: inline-block;
  font-size: 30rpx;
  color: #000000;
  /* padding-left: 130rpx; */
}

.caseHeader{
  padding-top: 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: start;
  align-items: flex-start;
}

.caseHeader .case-title{
  font-weight: 600;
  padding-left: 140rpx;
}

.case-subHeader{
  display: flex;
  flex-direction: row;
  justify-content: start;
  align-items: flex-start;
}

.case-subHeader .textColor{
  font-size: 25rpx;
  color: grey;
  padding-left: 140rpx;
}

.IconImage{
  position: absolute;
  margin-top: -85rpx;
  margin-left: 25rpx;
}

.IconImage image{
  height: 95rpx;
  width: 95rpx;
}

.case-descriptions{
  display: flex;
  flex-direction: column;
  justify-content: start;
  align-items: flex-start;
  margin-top: 35rpx;
  margin-left: 30rpx;
  width: 700rpx;
  /* background-color: black; */
}

.case-descriptions text{
  font-size: 32rpx;
  width: 650rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;

}

.shareCommentLike{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width: 630rpx;
  padding-left: 25rpx;
  margin-top: 17rpx;
}

.shareCommentLike image{
  height: 80rpx;
  width: 80rpx;
  margin-bottom: -30rpx;
}

.shareCommentLike text{
  color: grey;
  font-size: 25rpx;
  /* margin-top: -300rpx; */
}

