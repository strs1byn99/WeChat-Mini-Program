  .container1 {
   width: 100%;
   height: 1500rpx;
   display: flex;
   flex-direction: column;
   justify-content: flex-start;
   align-items: center;
   padding: 7rpx 7rpx 0rpx 7rpx;
   background-color: rgba(224, 221, 221, 0.774);
}
.title{
  width: 100%;
  height: 450rpx;
  position: relative;
  display: flex;
  background-color: #1a1af5;
  flex-direction: row;
  justify-content: flex-start;
  align-items: flex-start;
  padding: 10rpx 10rpx;
  margin-bottom: 5rpx;
}
.content{
  width: 100%;
  height: 1000rpx;
  background-color: rgb(255, 255, 255);
}
.subContent{
  width: 100%;
  height: 400rpx;
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: flex-start;
  padding: 45rpx 0 0 30rpx;
  background-color: rgb(255, 255, 255);
}
.text{
  display: inline-block;
  font-size: 30rpx;
  color: #262626;
}
.subContent .symbol{
  position: absolute;
  right: 50rpx;
}
.title .symbol2{
  position: absolute;
  right: 30rpx;
  bottom: 0rpx;
  color:  rgb(255, 255, 255);
}

.connectButton{
  width: 710rpx;
  height: 73rpx;
  background-color: #3babdf;
  position: absolute;
  margin-top: 320rpx;
  font-size: 30rpx;
  padding-left:20rpx;
  transform: translateX(2%);
}
.buttonText{
  color: #EEEEEE;
  font-size: 27rpx
}
.profileImg{
  box-sizing: border-box;
  position: absolute;
  top: 85rpx;
  left: 30rpx;
  border-radius:  100%;
  border: 3rpx solid #EEEEEE;
  overflow: hidden;
}
.settingLogo{
  display: block;
  width: 110rpx;
  height: 110rpx;
  position: absolute;
  top: 30rpx;
  right: 30rpx;
  border-radius:  100%;
  overflow: hidden;
}
.settingLogo image{
   display: block;
